{
  "comments": {
    "lineComment": "#"
  },
  "colorizedBracketPairs": [
    [
      ":",
      "end"
    ],
    [
      ":",
      "else"
    ]
  ],
  "autoClosingPairs": [
    {
      "open": "else:",
      "close": "\n",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": ":",
      "close": "end",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "\"",
      "close": "\"",
      "notIn": [
        "string"
      ]
    }
  ],
  "indentationRules": {
    "increaseIndentPattern": ":",
    "decreaseIndentPattern": "(end|else)"
  },
  "onEnterRules": [
    {
      "beforeText": ":",
      "afterText": "",
      "action": {
        "indent": "indentOutdent",
      }
    },
  ],
  "surroundingPairs": [
    [
      ":",
      "end"
    ],
    [
      ":",
      "else"
    ],
    [
      "\"",
      "\""
    ]
  ]
}